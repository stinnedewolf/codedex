import random

word_bank = ["strawberry", "bubble", "whistle", "chandelier", "fog", "crust", "random", "cupcake", "boardgame", "rainbow"]
word = random.choice(word_bank)

guessing_word = ["_"] * len(word)
attempts = 12
while attempts > 0:
  print("\nCurrent word:" + " ".join(guessing_word))

  guess = input("Guess a letter:"). lower()

  if guess in word:
    for i in range(len(word)):
        if word[i] == guess:
            guessing_word[i] = guess
    print("Great guess!")
  else:
   attempts = attempts - 1
   print("You've guessed wrong! Attempts left:" + str(attempts))

  if "_" not in guessing_word:
   print("Congratulations, you have found the word!")

  if attempts == 0 and "_" in guessing_word:
   print("\nYou lost :( You have no attempts left. The word was:" + word)
